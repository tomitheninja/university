PROGRAM p
    VÁLTOZÓK:
      max_so_far, x, y, n, i: EGÉSZ
   
    BE: n
    BE: y
    i := 1
    max_so_far := 0
    CIKLUS AMÍG i < n
      x := y
      BE: y
      HA max_so_far < |x - y| AKKOR
        max_so_far := |x - y|
      HA_VÉGE
      i := i + 1
    CIKLUS_VÉGE
    KI: max_so_far
  PROGRAM_VÉGE
  